<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VoluNGO</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-size: 1.4rem;
            font-family: 'Roboto';
            background-image: url(bg-img.jpg);
            background-size: cover;
            background-position: center;
        }

        nav {
            position: fixed;
            width: 100%;
            display: flex;
            justify-content: space-between;
            flex-direction: row;
            height: 5vw;
            align-items: center;
        }

        nav .navigation ul {
            display: flex;
            justify-content: flex-end;
            text-align: center;
        }

        nav .navigation ul li {
            list-style: none;
            padding: 10px;
            margin: 0 1vw;
        }

        nav .navigation ul li a {
            text-decoration: none;
            color: white;
            font-weight: 500;
            transition: all 0.3s;
            border: 1px solid white;
            border-radius: 10px;
            padding: 5px;
            /* margin:5px; */
         }
         
         nav .navigation ul li a:hover {
            background-color: white;
            color: black;
            border: 1px solid black;
        }

        #reg-btn {
            /* height: 100vh;
    width: 100%;
    display: flex;
    justify-content:column;
    align-items: center;
    text-align: center;
    padding-top: 40px; */
            width: 100%;
            height: 100vh;
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding-top: 40px;
        }

        #reg-btn .btn-holder {
            margin-bottom: 9rem;
            padding: 30px;
            align-items: center;
        }

        #reg-btn .btn-holder .reg-txt {
            font-size: 3rem;
            font-weight: 500;
            border: 1px solid white;
            color: black;
            background-color: white;
            border-radius: 5px;
            padding: 10px;
        }

        #reg-btn .btn-holder button {
            padding: 20px 8vw;
            margin: 0 20px;
            font-size: 1.5rem;
            color: #ddd;
            background-color: #333;
            border: #000;
            border-radius: 20px;
            transition: 0.3s ease-in-out;
            margin-top: 50px;
        }

        #reg-btn .btn-holder button:hover {
            outline: 2px solid #333;
            outline-offset: 4px;
            scale: 1.03;
        }

        nav > img {
         width: 150px;
        }
    </style>
</head>

<body>

    <!-- Navbar  -->
    <nav>
        <img src="facebook_cover_photo_1.png" alt="Logo">
        <div class="navigation">
            <ul>
                <!-- <i id="menu-close" class="fas fa-times"></i> -->
                <li><a href="#">Home</a></li>
                <li><a class="active" href="about.html">About Us</a></li>
                <li><a href="donate.html">Donate</a></li>
                <!-- <li><a href="#">Courses</a></li> -->
                <li><a href="contact.html">Contact Us</a></li>
            </ul>
            <!-- <img src="images/menu.png" id="menu-btn" alt=""> -->
        </div>
    </nav>



    <!-- Register Buttons -->
    <section id="reg-btn">
        <div class="btn-holder">
            <span class="reg-txt"> Register as </span>
            <form action="/volunteer"></form>
            <button onclick="window.location.replace('/volunteer')">Volunteer</button>
            <button onclick="window.location.replace('/ngo')">NGO</button>
        </div>
    </section>
</body>

</html>